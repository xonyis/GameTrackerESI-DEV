@page
@model GameTracker.Web.Pages.Studios.DeleteModel
@{
    ViewData["Title"] = "Supprimer le studio";
}

<p><a asp-page="/Studios/Index" class="btn-back">← Retour à la liste</a></p>

<div class="page-header">
    <h1 class="page-title">Supprimer le studio</h1>
</div>

@if (Model.Studio == null)
{
    <p>Studio non trouvé.</p>
}
else
{
    <div class="card-custom p-4">
        <p class="mb-3">Êtes-vous sûr de vouloir supprimer le studio suivant ?</p>
        <p class="mb-4"><strong>@Model.Studio.Name</strong></p>
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-actions">
                <button type="submit" class="btn btn-custom btn-danger-custom">Supprimer</button>
                <a asp-page="/Studios/Index" class="btn btn-custom btn-outline-custom">Annuler</a>
            </div>
        </form>
    </div>
}
