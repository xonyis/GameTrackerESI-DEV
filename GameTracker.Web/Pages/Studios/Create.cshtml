@page
@model GameTracker.Web.Pages.Studios.CreateModel
@{
    ViewData["Title"] = "Ajouter un studio";
}

<p><a asp-page="/Studios/Index" class="btn-back">← Retour à la liste</a></p>

<div class="page-header">
    <h1 class="page-title">Ajouter un studio</h1>
</div>

<form method="post" class="form-custom">
    <div class="mb-4">
        <label asp-for="Input.Name" class="form-label">Nom *</label>
        <input asp-for="Input.Name" class="form-control" maxlength="100" required />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-custom btn-primary-custom">Créer</button>
        <a asp-page="/Studios/Index" class="btn btn-custom btn-outline-custom">Annuler</a>
    </div>
</form>
